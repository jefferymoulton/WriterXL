doctype html
html(lang="en", ng-app="wxlApp")
    head

        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        meta(name="description", content="WriterXL")
        meta(name="author", content="Jeffery A. Moulton")

        title= title

        //[If lt IE 9]><script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script><script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]

        link(rel="stylesheet", href="/css/app.css")
        link(rel="stylesheet", href="/bower_components/ui-navbar/release/css/ui-navbar.css")

        script(src="/bower_components/angular/angular.js")
        script(src="/bower_components/angular-bootstrap/ui-bootstrap.js")
        script(src="/bower_components/angular-messages/angular-messages.js")
        script(src="/bower_components/angular-ui-router/release/angular-ui-router.js")
        script(src="/bower_components/ui-navbar/release/js/ui-navbar.js")

    body.ng-cloak(role="document")

        header.navbar.navbar-default.navbar-fixed-top(ng-controller="NavigationCtrl")
            div.container
                div.navbar-header
                    button.navbar-toggle(type="button", data-toggle="collapse", ng-init="navbarCollapsed = true", ng-click="navbarCollapsed = !navbarCollapsed")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar

                    a.navbar-brand(href="#")
                        img(src="/img/wxl-logo.png", alt="WriterXL Logo")

                nav.collapse.navbar-collapse(ng-class="!navbarCollapsed && 'in'")
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href="#signup")
                                span.glyphicon.glyphicon-user
                                | &nbsp;Sign Up

                        li.dropdown(uib-dropdown, auto-close="disabled")
                            a.dropdown-toggle(href="#", role="button", uib-dropdown-toggle)
                                span.glyphicon.glyphicon-log-in
                                | &nbsp;Log In
                                span.caret

                            duv.dropdown-menu.padded-box(role="menu")
                                form(role="form", ng-controller="UserCtrl as ctrl")
                                    div.form-group
                                        label.sr-only(for="email") E-mail Address
                                        input#email.form-control(type="text", placeholder="agatha.cristie@writerxl.com", ng-bind="ctrl.email")

                                    div.form-group
                                        label.sr-only(for="password") Password
                                        input#password.form-control(type="password", placeholder="Password", ng-bind="ctrl.password")

                                    div.checkbox
                                        label
                                            input#remember-me(type="checkbox")
                                            | Remember Me
                                    div.form-group
                                        button.btn.btn-default(ng-click="ctrl.login()") Sign In

        div.container.theme-showcase(role="main")
            div(ui-view)

        // [if lt IE 9]><script src="bower_components/es5-shim/es5-shim.js"></script><script src="bower_components/json3/lib/json3.min.js"></script><![endif]

        script(src="/js/wxl-app.js")
        script(src="/js/controllers/navigation-controller.js")
        script(src="/js/controllers/registration-controller.js")