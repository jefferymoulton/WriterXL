doctype html
html(lang="en", ng-app="wxlApp")
    head

        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        meta(name="description", content="")
        meta(name="author", content="Jeffery A. Moulton")

        title= title

        //[If lt IE 9]><script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script><script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]

        link(rel="stylesheet", href="/css/app.css")

    body(role="document")

        nav.navbar.navbar-default.navbar-fixed-top
            div.container
                div.navbar-header
                    button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar

                     a.navbar-brand(href="/")
                        img(src="/img/wxl-logo.png")

                div#navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href="/signup")
                                span.glyphicon.glyphicon-user
                                | &nbsp;Sign Up
                        li.dropdown
                            a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false")
                                span.glyphicon.glyphicon-log-in
                                |&nbsp;Log In
                                span.caret
                            ul.dropdown-menu(style="padding: 17px")
                                li.dropdown
                                    div
                                        form#login-form
                                            div.form-group
                                                label.sr-only(for="email") E-mail Address
                                                input#email(type="text", placeholder="E-mail Address")
                                            div.form-group
                                                label.sr-only(for="password") Password
                                                input#password(type="password", placeholder="Password")
                                            div.checkbox
                                                label
                                                    input#remember-me(type="checkbox")
                                                    | Remember Me
                                            div.form-gropu
                                                button.btn.btn-primary Sign In

                ///.nav-collapse

        div.container.theme-showcase(role="main")
            p Hi, I'm a {{message}}
            div(ng-view)

        // [if lt IE 9]><script src="bower_components/es5-shim/es5-shim.js"></script><script src="bower_components/json3/lib/json3.min.js"></script><![endif]

        script(src="/bower_components/jquery/dist/jquery.js")
        script(src="/bower_components/bootstrap/dist/js/bootstrap.js")
        script(src="/bower_components/angular/angular.js")
        script(src="/bower_components/angular-route/angular-route.js")

        script(src="/js/wxl-app.js")
        script(src="/js/wxl-controllers.js")